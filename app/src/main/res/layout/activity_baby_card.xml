<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_baby_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.tttttest.util.BabyCardActivity">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="20dp"
        android:id="@+id/cardView2">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
           >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@drawable/biuvk"
                android:id="@+id/relativeLayout2">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="77dp"
                    app:srcCompat="@mipmap/ic_launcher_round" />

            </RelativeLayout>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/relativeLayout2">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/relativeLayout2"
                    android:background="@color/white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:id="@+id/bc_rl_phoneID"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentStart="true"
                            android:foreground="?android:attr/selectableItemBackground"
                           >

                            <TextView
                                android:id="@+id/textView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignBottom="@+id/imageView5"
                                android:layout_marginStart="20dp"
                                android:layout_toEndOf="@+id/imageView5"
                                android:text="手表号码" />

                            <ImageView
                                android:id="@+id/imageView5"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_alignParentStart="true"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="20dp"
                                app:srcCompat="@mipmap/ic_launcher_round" />

                            <TextView
                                android:id="@+id/bc_tx_phoneID"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:layout_marginEnd="16dp"
                                android:text="未填写" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/bc_rl_sex"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentStart="true"
                            android:foreground="?android:attr/selectableItemBackground"
                          >

                            <ImageView
                                android:id="@+id/imageView6"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_alignParentStart="true"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="20dp"
                                app:srcCompat="@mipmap/ic_launcher_round" />

                            <TextView
                                android:id="@+id/textView8"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignTop="@+id/imageView6"
                                android:layout_marginStart="20dp"
                                android:layout_toEndOf="@+id/imageView6"
                                android:text="性别" />

                            <TextView
                                android:id="@+id/bc_tx_sex"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"

                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:layout_marginEnd="16dp"
                                android:text="未填写" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/bc_rl_grade"
                            android:layout_width="match_parent"

                            android:foreground="?android:attr/selectableItemBackground"
                            android:layout_height="50dp">
                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_alignParentStart="true"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="20dp"
                                app:srcCompat="@mipmap/ic_launcher_round"
                                android:id="@+id/imageView7" />
                            <TextView

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/bc_tx_grade"
                                android:layout_centerVertical="true"
                                android:layout_alignParentEnd="true"
                                android:layout_marginEnd="16dp"
                                android:text="未填写" />

                            <TextView
                                android:id="@+id/textView9"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignBottom="@+id/imageView7"
                                android:layout_marginStart="20dp"
                                android:layout_toEndOf="@+id/imageView7"
                                android:text="年级" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/bc_rl_height"
                            android:layout_width="match_parent"

                            android:foreground="?android:attr/selectableItemBackground"
                            android:layout_height="50dp">
                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_alignParentStart="true"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="20dp"
                                app:srcCompat="@mipmap/ic_launcher_round"
                                android:id="@+id/imageView8" />
                            <TextView
                                android:id="@+id/bc_tx_height"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"

                                android:layout_centerVertical="true"
                                android:layout_alignParentEnd="true"
                                android:layout_marginEnd="16dp"
                                android:text="未填写" />

                            <TextView
                                android:id="@+id/textView10"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignBottom="@+id/imageView8"
                                android:layout_marginStart="20dp"
                                android:layout_toEndOf="@+id/imageView8"
                                android:text="身高" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/bc_rl_birthday"
                            android:layout_width="match_parent"

                            android:foreground="?android:attr/selectableItemBackground"
                            android:layout_height="50dp">
                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_alignParentStart="true"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="20dp"
                                app:srcCompat="@mipmap/ic_launcher_round"
                                android:id="@+id/imageView9" />
                            <TextView
                                android:id="@+id/bc_tx_birthday"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_alignParentEnd="true"
                                android:layout_marginEnd="16dp"
                                android:text="未填写" />

                            <TextView
                                android:id="@+id/textView11"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignTop="@+id/imageView9"
                                android:layout_marginStart="20dp"
                                android:layout_toEndOf="@+id/imageView9"
                                android:text="生日" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/bc_rl_weight"
                            android:layout_width="match_parent"
                            android:foreground="?android:attr/selectableItemBackground"
                            android:layout_height="50dp">
                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_alignParentStart="true"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="20dp"
                                app:srcCompat="@mipmap/ic_launcher_round"
                                android:id="@+id/imageView10" />
                            <TextView
                                android:id="@+id/bc_tx_weight"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_alignParentEnd="true"
                                android:layout_marginEnd="16dp"
                                android:text="未填写" />

                            <TextView
                                android:id="@+id/textView12"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignTop="@+id/imageView10"
                                android:layout_marginStart="20dp"
                                android:layout_toEndOf="@+id/imageView10"
                                android:text="体重" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp">
                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_alignParentStart="true"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="20dp"
                                app:srcCompat="@mipmap/ic_launcher_round" />

                        </RelativeLayout>
                    </LinearLayout>
                </RelativeLayout>
            </ScrollView>

        </RelativeLayout>


    </android.support.v7.widget.CardView>



</RelativeLayout>
